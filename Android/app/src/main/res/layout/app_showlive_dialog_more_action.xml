<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:background="@drawable/app_bg_dialog"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="工具"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_switch_camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="20dp"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="fitXY"
        android:background="@drawable/app_switch_camera" />

    <TextView
        android:id="@+id/tv_switch_camera"
        app:layout_constraintLeft_toLeftOf="@id/btn_switch_camera"
        app:layout_constraintTop_toBottomOf="@id/btn_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="切换摄像头"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
